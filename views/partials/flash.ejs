<%if(success && success.length){%>
    <div class="success">

        <h1 class="success-msg">
            <%=success%>
        </h1>
        <button type="button"><span class="close">&times;</span></button>
    </div>
    <%}%>

        <%if(error && error.length){%>
            <div class="error">
                <%=error%>
                    <button type="button"></button>
            </div>
            <%}%>

                <style>
                    .success {
                        display: flex;
                        justify-content: space-between;
                        margin-top: 120px;
                    }

                    .success h1 {

                        margin: 0px auto;
                        text-align: center;
                    }

                    .success-msg {
                        width: 100%;
                        height: 7vh;
                        background-color: rgb(208, 144, 98);
                        font-size: 30px;
                        color: white;
                        margin-left: 20px;
                    }

                    button {
                        margin-right: 20px;
                        border-color: chocolate;
                        color: chocolate;
                        /* border-radius: 50px; */
                    }


                    .close {
                        display: block;
                        font-size: 40px;
                        width: 30px;
                        height: 10px;
                        margin-bottom: 23px;

                    }

                    .error {
                        width: 90%;
                        height: 50px;
                        background-color: aquamarine;
                    }
                </style>

                <script>

                    const close = document.querySelector('.success');
                    close.addEventListener("click", function () {
                        close.style.display = "none";
                    })

                    // const error = document.querySelector('.error');
                    // error.addEventListener("click", function () {
                    //     close_error.style.display = "none";
                    // })

                </script>