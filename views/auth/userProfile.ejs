    <%- include("../partials/navbar") %>



        <div class="userProfile-container">

            <h3>USER PROFILE</h3>
            <br>


            <div class="userProfileInner-container">
                <!-- <label for="">Username</label> -->
                <input type="text" value=<%=currentUser.username %>>


